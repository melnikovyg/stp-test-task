<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.scrumit.web.labourintensity.LabourIntensityEdit"
        datasource="labourIntensityDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.scrumit.web.labourintensity">
    <dsContext>
        <datasource id="labourIntensityDs"
                    class="com.company.scrumit.entity.LabourIntensity"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="labourIntensityDs">
            <column width="250px">
                <field property="name"/>
                <field property="value"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
